<Page x:Class="Zadatak07.Zadatak03"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zadatak07"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zadatak03">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20">
            <TextBox 
                x:Name="tbXPathQuery" 
                Width="500" Margin="0,0,10,0" VerticalAlignment="Center" />
            <Button 
                Content="Query Cartoons" 
                Click="QueryCartoons_Click" 
                Width="120" />
        </StackPanel>

        <TextBox 
            x:Name="tbResults" 
            Grid.Row="1" 
            VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
            IsReadOnly="True" TextWrapping="Wrap"/>
    </Grid>
</Page>
